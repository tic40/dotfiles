[alias]
  aicm = "!f() { COMMITMSG=$(claude -p 'Generate ONLY a one-line Git commit message in English, using imperative mood, summarizing what was changed and why, based strictly on the contents of `git diff --cached`. Do not add explanation or a body. Output only the commit summary line.'); git commit -m \"$COMMITMSG\" -e; }; f"
  br = branch
  brc = branch --show-current
  bra = branch -a
  brr = branch -r
  c = commit
  c-rank = shortlog -sn --no-merges
  c-rank-month = "!git shortlog -sn --no-merges --after=\"$(date +%Y/%m/01)\" --before=\"$(date +%Y/%m/%d)\""
  cm = commit -m
  cma = commit --amend
  cme = commit --allow-empty -m
  co = checkout
  cob = checkout -b
  conf = config --list
  df = diff --color
  dfc = diff --color-words
  fe = fetch -p
  info = remote show origin
  l = log --date=short --pretty=format:'%C(yellow)%h %Cgreen%cd %Cblue%cn %Creset%s'
  lg = log --graph --date=short --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cd %Cblue%cn%Cred%d %Creset%s'
  ll = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%cr %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
  lm = log --merges --pretty=format:'%C(yellow)%h %Cgreen%ci %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
  lone = log --oneline
  ls = ls-files
  lsd = ls-files --deleted
  lsm = ls-files --modified
  pushf = push --force-with-lease
  r = reset
  re = restore
  rh = reset --hard
  rhh = reset --hard HEAD
  rl = reflog show
  rmall = "!git rm `git ls-files --deleted` " # remove all deleted file
  rs = reset --soft
  rsh = reset --soft HEAD
  st = status
  sw = switch
[core]
  excludesfile = ~/.gitignore_global
  autocrlf = false
  pager = less -r
  editor = vim
  whitespace = cr-at-eol
  ignorecase = false
[color]
  ui = true
[merge]
  ff = false
[pull]
  ff = only
[init]
  defaultBranch = main
