{
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(gh pr:*)",
      "Bash(gh issue:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true
  },
  "language": "japanese",
  "skipDangerousModePermissionPrompt": true
}
